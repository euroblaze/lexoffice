<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Lexoffice Invoice form view -->
        <record id="view_lexoffice_invoice_form" model="ir.ui.view">
            <field name="name">lexoffice.invoice.form</field>
            <field name="model">lexoffice.invoice</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                    <field name="lexoffice_id" readonly="1"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
