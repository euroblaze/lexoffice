<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Lexoffice Product form view -->
        <record id="view_lexoffice_product_form" model="ir.ui.view">
            <field name="name">product.template.lexoffice.form</field>
            <field name="model">product.template</field>
            <field name="inherit_id" ref="product.product_template_form_view"/>
            <field name="arch" type="xml">
                <field name="default_code" position="after">
                    <field name="lexoffice_id" readonly="1"/>
                </field>
            </field>
        </record>
    </data>
</odoo>
